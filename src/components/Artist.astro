---
const { data } = Astro.props;
---

<div class="card" style={`--bg: ${data.img}`}>
  <div class="card-content">
    <a href="#" class="card-btn">{data.info}</a>
    <div class="card-footer">
      <h1 class="artistname">{data.name}</h1>
    </div>
  </div>
</div>

<style>
  .card {
    display: grid;
    grid-template-columns: 1fr;
    border: 3px solid black;
    border-radius: 35px 0 25px 5px;
    overflow: hidden;
    width: 375px;
    height: 269px;
    left: 453px;
    top: 348px;
    margin: 2rem;
  }

  .card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;

    background-image: url(var(--bg));
  }

  img {
    max-width: 100%;
  }

  .card-btn {
    margin-left: 10px;
    margin-bottom: 5px;
    border-radius: 25px 0 25px 5px;
    align-self: flex-start;
    background-color: #eb342a;
    color: #ffffff;
    font-size: 12px;
    padding: 5px 35px;
    text-decoration: none;
    margin-top: auto;
  }

  .card-footer {
    background-color: black;
    border-radius: 25px 0 0px 0px;
    padding: 5px 5px;
    display: flex;
    justify-content: flex-start;
  }

  .artistname {
    margin: 10px 0 0 20px;
    font-size: 34px;
    color: white;
  }
</style>
